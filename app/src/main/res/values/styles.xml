<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="editTextStyle">
        <item name="android:drawablePadding">10dp</item>
<!--        <item name="android:drawableTint">@color/purple_400</item>-->
        <item name="android:textColor">@color/orange_600</item>
        <item name="android:background">@drawable/rectangle_shape</item>
        <item name="android:padding">@dimen/padding_20</item>
        <item name="android:layout_margin">@dimen/margin_15</item>
    </style>

    <style name="guestStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">@dimen/margin_15</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:background">@drawable/rectangle_unfill</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_10</item>
    </style>
</resources>